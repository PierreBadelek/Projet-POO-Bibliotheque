<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.projetpoobibliotheque.controller.MainController" fx:id="mainPane">
    <top>
        <HBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Button text="Emprunts" onAction="#showEmprunts" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
