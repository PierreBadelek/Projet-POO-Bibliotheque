<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21.0.6"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projetpoobibliotheque.MainController"
      spacing="20" alignment="TOP_CENTER"
      stylesheets="@css/style.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Bibliothèque POO 3A" styleClass="label-titre"/>

    <TabPane fx:id="tabPane" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">

        <Tab text="Documents">
            <VBox spacing="10" alignment="CENTER">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                <TableView fx:id="tableDocuments" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <placeholder>
                        <Label text="Aucun document chargé" textFill="#7f8c8d"/>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="titreCol" text="Titre"/>
                        <TableColumn fx:id="auteurCol" text="Auteur"/>
                        <TableColumn fx:id="disponibleCol" text="Disponible" style="-fx-alignment: CENTER;"/>
                    </columns>
                </TableView>

                <Button text="Charger les documents" onAction="#loadDocuments" styleClass="button"/>
            </VBox>
        </Tab>

        <Tab text="Emprunts">
            <VBox spacing="10" alignment="CENTER">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                <TableView fx:id="tableEmprunts" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <placeholder>
                        <Label text="Aucun emprunt en cours" textFill="#7f8c8d"/>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="empruntDocCol" text="Document"/>
                        <TableColumn fx:id="empruntMembreCol" text="Membre"/>
                        <TableColumn fx:id="empruntDateCol" text="Date Emprunt" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="empruntRetourCol" text="Date Retour" style="-fx-alignment: CENTER;"/>
                    </columns>
                </TableView>

                <Button text="Charger les emprunts" onAction="#loadEmprunts" styleClass="button"/>
            </VBox>
        </Tab>

        <Tab text="Membres">
            <VBox spacing="10" alignment="CENTER">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                <TableView fx:id="tableMembres" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <placeholder>
                        <Label text="Aucun membre trouvé" textFill="#7f8c8d"/>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="membreNomCol" text="Nom"/>
                        <TableColumn fx:id="membreEmailCol" text="Email"/>
                    </columns>
                </TableView>

                <Button text="Charger les membres" onAction="#loadMembres" styleClass="button"/>
            </VBox>
        </Tab>

        <Tab text="Livres">
            <VBox spacing="10" alignment="CENTER">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                <TableView fx:id="tableLivres" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <placeholder>
                        <Label text="Aucun livre dans la base" textFill="#7f8c8d"/>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="livreTitreCol" text="Titre"/>
                        <TableColumn fx:id="livreAuteurCol" text="Auteur"/>
                        <TableColumn fx:id="livreIsbnCol" text="ISBN" style="-fx-alignment: CENTER;"/>
                    </columns>
                </TableView>

                <Button text="Charger les livres" onAction="#loadLivres" styleClass="button"/>
            </VBox>
        </Tab>

        <Tab text="Magazines">
            <VBox spacing="10" alignment="CENTER">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                <TableView fx:id="tableMagazines" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <placeholder>
                        <Label text="Aucun magazine disponible" textFill="#7f8c8d"/>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="magTitreCol" text="Titre"/>
                        <TableColumn fx:id="magAuteurCol" text="Auteur"/>
                        <TableColumn fx:id="magNumCol" text="Numéro" style="-fx-alignment: CENTER;"/>
                    </columns>
                </TableView>

                <Button text="Charger les magazines" onAction="#loadMagazines" styleClass="button"/>
            </VBox>
        </Tab>

    </TabPane>
</VBox>