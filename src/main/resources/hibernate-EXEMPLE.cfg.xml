<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!-- Configuration PostgreSQL -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/projetpoo3a</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">wwwwwwwwww</property>

        <!-- Dialecte PostgreSQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Création automatique des tables -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Affichage SQL -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Pool de connexions -->
        <property name="hibernate.connection.pool_size">10</property>

        <!-- Mapping des entités -->
        <mapping class="com.example.projetpoobibliotheque.model.Document"/>
        <mapping class="com.example.projetpoobibliotheque.model.Livre"/>
        <mapping class="com.example.projetpoobibliotheque.model.Magazine"/>
        <mapping class="com.example.projetpoobibliotheque.model.Membre"/>
        <mapping class="com.example.projetpoobibliotheque.model.Emprunt"/>

    </session-factory>
</hibernate-configuration>